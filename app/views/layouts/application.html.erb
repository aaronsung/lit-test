<!DOCTYPE html>
<html>
<head>
  <title>Literature World</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <header class="navbar navbar-fixed-top navbar-inverse">
	  <div class="container">
		  <%= link_to "Literature World", articles_path, id: "logo" %>
		  <nav>
			  <ul class="nav navbar-nav navbar-right">
				  <li><%= link_to "Home",   articles_path %></li>
				  <% if session[:user_id]!=nil %>
				  <% if is_admin %>
				    <li><%= link_to "Manage User", editors_path %></li>
				  <% end%>
				    <li><%= link_to "Log out", sessions_destroy_path %></li>
				  <%else%>
				    <li><%= link_to "Log in", login_path %></li>
				  <%end%>
				  <%= form_tag(articles_path,:class => 'nav navbar-form navbar-right' ,:method => "get", id: "search-form") do %>
				  <div class="input-group">
					  <%= text_field_tag :search, params[:search], :class=>'form-control', placeholder: "Search" %>
					  <div class="input-group-btn">
						  <%= button_tag :name => nil, :class => 'btn btn-default', :type=>:submit do%>
						    <i class="glyphicon glyphicon-search"></i>
						  <%end%>
					  </div>
				  </div>
				  <%end%>
			  </div>
		  </ul>

	  </nav>
  </div>
</header>
</head>
<body>
<div class="container">
	<% flash.each do |message_type, message| %> 
	<div class="alert alert-<%= message_type %>">
		<%= message %>
	</div> 
	<% end %>
</div>
<%= yield %>
<footer class="footer">
	<small>
		Literature World 2015
	</small>
	  <nav>
    <ul>
      <li><%= link_to ".",   '#' %></li>
    </ul>
  </nav>
</footer>
</body>
</html>
