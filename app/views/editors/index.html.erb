<p id="notice"><%= notice %></p>

<h1>Listing Editors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Is admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @editors.each do |editor| %>
      <tr>
        <td><%= editor.name %></td>
        <td><%= editor.email %></td>
        <td><%= editor.is_admin %></td>
        <td><%= link_to 'Show', editor %></td>
        <td><%= link_to 'Edit', edit_editor_path(editor) %></td>
        <td>
          <%if @is_admin%>
          <%= link_to 'Destroy', editor, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

