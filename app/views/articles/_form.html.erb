
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <p>The form has <%= pluralize(@article.errors.count, "error") %> <p>
      </div>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :upload %><br>
    <%= f.file_field :upload %>
  </div>
  <div class="field">
    <%= f.label :catalog %><br>
    <%= f.select :catalog, options_for_select(@catalogs.map{|c| [c.to_s,c]}, :selected => f.object.catalog ), :class => 'form-control' %> 
  </div>
  <div class="actions">
    <%= f.submit  "Upload", class: "btn btn-lg btn-primary"%>
  </div>
<% end %>
